<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>shopping-cart</portlet-name>
		<display-name>Shopping Cart</display-name>
		<portlet-class>
			com.rivetlogic.ecommerce.portlet.ShoppingCartPortlet
		</portlet-class>
	    <init-param>
	        <name>config-template</name>
	        <value>/html/shoppingcart/configuration.jsp</value>
	    </init-param>
		<init-param>
			<name>view-template</name>
			<value>/html/shoppingcart/view.jsp</value>
		</init-param>
		<init-param>
			<name>help-template</name>
			<value>/html/help.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Shopping Cart</title>
			<short-title>Shopping Cart</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>shopping-orders</portlet-name>
		<display-name>Shopping Orders</display-name>
		<portlet-class>
			com.rivetlogic.ecommerce.portlet.OrdersPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/html/orders/view.jsp</value>
		</init-param>
		<init-param>
			<name>help-template</name>
			<value>/html/help.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>help</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Shopping Orders</title>
			<short-title>Shopping Orders</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>